  <section id="quiz-section">
    <h2>Quiz Game</h2>
    <div id="quiz-container"></div>
    <button onclick="startQuiz()">Start Quiz</button>
  </section>
  <script>
    const days = [
      {kanji: "月曜日", kana: "げつようび", romaji: "getsuyoubi", english: "Monday"},
      {kanji: "火曜日", kana: "かようび", romaji: "kayoubi", english: "Tuesday"},
      {kanji: "水曜日", kana: "すいようび", romaji: "suiyoubi", english: "Wednesday"},
      {kanji: "木曜日", kana: "もくようび", romaji: "mokuyoubi", english: "Thursday"},
      {kanji: "金曜日", kana: "きんようび", romaji: "kinyoubi", english: "Friday"},
      {kanji: "土曜日", kana: "どようび", romaji: "doyoubi", english: "Saturday"},
      {kanji: "日曜日", kana: "にちようび", romaji: "nichiyoubi", english: "Sunday"}
    ];
    let quizIndex = 0, score = 0;
    function startQuiz() {
      quizIndex = 0;
      score = 0;
      document.getElementById('quiz-container').innerHTML = '';
      nextQuestion();
    }
    function nextQuestion() {
      if (quizIndex >= days.length) {
        document.getElementById('quiz-container').innerHTML = `<p>Quiz complete! Score: ${score}/${days.length}</p>`;
        return;
      }
      const day = days[quizIndex];
      const question = `What is "${day.english}" in Japanese (kanji)?`;
      document.getElementById('quiz-container').innerHTML = `
        <p>${question}</p>
        <input id="answer" placeholder="Type kanji here">
        <button onclick="checkAnswer()">Submit</button>
        <div id="result"></div>
      `;
    }
    function checkAnswer() {
      const answer = document.getElementById('answer').value.trim();
      const day = days[quizIndex];
      const resultDiv = document.getElementById('result');
      if (answer === day.kanji) {
        resultDiv.textContent = "Correct!";
        score++;
      } else {
        resultDiv.textContent = `Incorrect. The answer is ${day.kanji} (${day.kana})`;
      }
      quizIndex++;
      setTimeout(nextQuestion, 1200);
    }
  </script>
</body>
